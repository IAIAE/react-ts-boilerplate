{
  "compilerOptions": {
    "baseUrl": "./src",
    "traceResolution": false,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": false,
    "preserveConstEnums": false,
    "skipLibCheck": false,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*"
  ],
  "files": [
    "./types/index.d.ts",
    "./types/polyfill.d.ts"
  ]
}